<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#7F817F" />
            <stroke
                android:width="0dp"
                android:color="#58FA58" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#B7B8B7" />
             <!--<gradient
                android:startColor="#58FA58"
                android:endColor="#58FA58"
                android:angle="270" />-->
            <stroke
                android:width="0dp"
                android:color="#58FA58" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>
</selector>