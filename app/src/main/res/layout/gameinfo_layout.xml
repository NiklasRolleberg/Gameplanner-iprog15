<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="simtek.gameplanner.android.Gameinfo_Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home team: STU"
        android:id="@+id/gameinfo_homeTeam"
        android:textSize="20dp"
        android:layout_marginTop="53dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Away team: TRC"
        android:id="@+id/gameinfo_awayTeam"
        android:textSize="20dp"
        android:layout_below="@+id/gameinfo_homeTeam"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venue: Bergshamra IP"
        android:id="@+id/gameinfo_Arena"
        android:textSize="20dp"
        android:layout_below="@+id/gameinfo_awayTeam"
        android:layout_alignParentLeft="true"
        android:background="@drawable/clickable"
        android:linksClickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kickoff time: 2015-05-05, 15:00"
        android:id="@+id/gameinfo_kickoffTime"
        android:textSize="20dp"
        android:layout_below="@+id/gameinfo_Arena"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Game information"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Officials:"
        android:id="@+id/textView2"
        android:layout_below="@+id/gameinfo_kickoffTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R: "
        android:id="@+id/gameinfo_referee"
        android:textSize="20dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="U: "
        android:id="@+id/gameinfo_umpire"
        android:textSize="20dp"
        android:layout_below="@+id/gameinfo_referee"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HL: "
        android:id="@+id/gameinfo_headLinesman"
        android:textSize="20dp"
        android:layout_below="@+id/gameinfo_umpire"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="L: "
        android:id="@+id/gameinfo_linesman"
        android:textSize="20dp"
        android:layout_below="@+id/gameinfo_headLinesman"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BJ: "
        android:id="@+id/gameinfo_backJudge"
        android:textSize="20dp"
        android:layout_below="@+id/gameinfo_linesman"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Projected revenue:"
        android:id="@+id/textView4"
        android:layout_marginTop="88dp"
        android:layout_below="@+id/gameinfo_backJudge"
        android:layout_toRightOf="@+id/gameinfo_headLinesman"
        android:layout_toEndOf="@+id/gameinfo_headLinesman" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="9000"
        android:id="@+id/totalCost"
        android:layout_alignTop="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
