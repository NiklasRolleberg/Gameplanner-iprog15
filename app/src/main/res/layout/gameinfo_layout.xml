<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="simtek.gameplanner.android.Gameinfo_Activity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3" >

        <RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent"
            android:id="@+id/myScrollView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home team: STU"
            android:id="@+id/gameinfo_homeTeam"
            android:textSize="20dp"
            android:layout_marginTop="53dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Away team: TRC"
            android:id="@+id/gameinfo_awayTeam"
            android:textSize="20dp"
            android:layout_below="@+id/gameinfo_homeTeam"
            android:layout_alignParentLeft="true" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kickoff time: 2015-05-05, 15:00"
            android:id="@+id/gameinfo_kickoffTime"
            android:textSize="20dp"
            android:layout_below="@+id/gameinfo_awayTeam"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Game information"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="380dp"
            android:layout_below="@+id/gameinfo_kickoffTime"
            android:id="@+id/linear"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="top">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Officials"
                android:id="@+id/gameinfo_lbl_officials"
                android:layout_below="@+id/gameinfo_kickoffTime"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R: "
                android:id="@+id/gameinfo_referee"
                android:textSize="20dp"
                android:layout_below="@+id/gameinfo_lbl_officials"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="U: "
                android:id="@+id/gameinfo_umpire"
                android:textSize="20dp"
                android:layout_below="@+id/gameinfo_referee"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="HL: "
                android:id="@+id/gameinfo_headLinesman"
                android:textSize="20dp"
                android:layout_below="@+id/gameinfo_umpire"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="L: "
                android:id="@+id/gameinfo_linesman"
                android:textSize="20dp"
                android:layout_below="@+id/gameinfo_headLinesman"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BJ: "
                android:id="@+id/gameinfo_backJudge"
                android:textSize="20dp"
                android:layout_below="@+id/gameinfo_linesman"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Travel and pay: 10 000"
                android:id="@+id/gameinfo_officialsCost"
                android:background="@android:color/holo_orange_light"
                android:layout_row="0"
                android:layout_column="9"
                android:layout_alignBottom="@+id/textView4"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:textSize="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Venue: Bergshamra IP"
                android:id="@+id/gameinfo_Arena"
                android:textSize="20dp"
                android:layout_below="@+id/gameinfo_awayTeam"
                android:layout_alignParentLeft="true"
                android:background="@drawable/simpleframe"
                android:linksClickable="false"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visitors: "
                    android:id="@+id/gameinfo_visitors"
                    android:textSize="20dp" />

                <Space
                    android:layout_width="70dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Turnout [%]:"
                    android:id="@+id/gameinfo_turnout"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ticket price:"
                    android:id="@+id/gameinfo_ticketPrice"
                    android:textSize="20dp" />

                <Space
                    android:layout_width="70dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rent cost:"
                    android:id="@+id/gameinfo_rentCost"
                    android:textSize="20dp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Estimated income: 19 000"
                android:id="@+id/textView5"
                android:background="@android:color/holo_green_dark"
                android:layout_row="0"
                android:layout_column="9"
                android:layout_alignBottom="@+id/textView4"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:textSize="17dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Projected revenue:"
                    android:id="@+id/textView4"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text=" 9000 "
                    android:id="@+id/totalCost"
                    android:background="@color/abc_search_url_text_normal"
                    android:layout_row="0"
                    android:layout_column="9"
                    android:layout_alignBottom="@+id/textView4"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

        </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_alignBottom="@+id/gameinfo_Arena"
                android:layout_toRightOf="@+id/gameinfo_Arena"
                android:layout_toEndOf="@+id/gameinfo_Arena"
                android:src="@android:color/background_dark" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>
