<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="simtek.gameplanner.android.Gameinfo_Activity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView3" >

        <RelativeLayout android:layout_height="match_parent" android:layout_width="match_parent"
            android:id="@+id/myScrollView">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:text="Home team: "
            android:id="@+id/gameinfo_homeTeam"
            android:textSize="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Away team: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:id="@+id/gameinfo_awayTeam"
            android:textSize="20dp"
            android:layout_below="@+id/gameinfo_homeTeam"
            android:layout_alignParentLeft="true" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kickoff time: "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000"
            android:id="@+id/gameinfo_kickoffTime"
            android:textSize="20dp"
            android:layout_below="@+id/gameinfo_awayTeam"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

            <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="380dp"
            android:layout_below="@+id/gameinfo_kickoffTime"
            android:id="@+id/linear"
            android:layout_row="0"
            android:layout_column="0"
            android:gravity="top">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Officials"
                android:id="@+id/gameinfo_officials"
                android:layout_below="@+id/gameinfo_kickoffTime"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/buttondesign"
                android:textSize="20dp"
                android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Crew rating: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:id="@+id/gameinfo_crewrating"
                    android:textSize="20dp" />

                <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Venue: "
                android:id="@+id/gameinfo_Arena"
                android:textSize="20dp"
                android:layout_below="@+id/gameinfo_awayTeam"
                android:layout_alignParentLeft="true"
                android:background="@drawable/buttondesign"
                android:linksClickable="false"
                android:layout_marginTop="5dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Turnout [%]:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:id="@+id/gameinfo_turnout"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Visitors: "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:id="@+id/gameinfo_visitors"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ticket price:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:id="@+id/gameinfo_ticketPrice"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rent cost:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:id="@+id/gameinfo_rentCost"
                    android:textSize="20dp" />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Expenses: 10 000"
                android:id="@+id/gameinfo_expenses"
                    android:layout_row="0"
                android:layout_column="9"
                    android:textSize="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="20dp"
                    android:textColor="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Estimated income: 19 000"
                    android:id="@+id/gameinfo_income"
                    android:layout_row="0"
                    android:layout_column="9"
                    android:textSize="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="2dp"
                    android:textColor="#000000" />

                <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Projected revenue:"
                    android:id="@+id/textView4"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text=" 9000 "
                    android:id="@+id/gameinfo_finalRevenue"
                    android:background="@color/abc_search_url_text_normal"
                    android:layout_row="0"
                    android:layout_column="9"
                    android:layout_alignBottom="@+id/textView4"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />


                </RelativeLayout>

        </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>
